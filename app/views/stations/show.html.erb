<p id="notice" xmlns="http://www.w3.org/1999/html"><%= notice %></p>
<div class="alert alert-info ">
  <h2>
    <b>Название:</b>
    <%= @station.name %>
  </h2>

  <h4>
    <b>Район:</b>
    <%= @station.district_id %>
  </h4>

</div>
<!-----------list of device---------->


</br>


<% if @modems.any? %>

    <div class="alert alert-success">
      <strong>МОДЕМЫ</strong>
    </div>

    <table class="table table-bordered">
      <thead>
      <tr class="success">
        <th>Тип</th>
        <th>Скорость</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>

      <% @modems.each do |modem| %>
          <% if modem.retirement? %>
              <tr class="error">

          <% else %>
              <tr>
          <% end %>
          <td><%= modem.modem_type %></td>
          <td> <%= modem.speed %> </td>

          <td class="ctrl"> <%= link_to "просмотр", station_modem_path(@station, modem) %></td>
          <td class="ctrl"><%= link_to "редактировать", edit_station_modem_path(@station, modem) %></td>

          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

<% if @printers.any? %>
    <div class="alert alert-success">
      <strong>ПЕЧАТНЫЕ УСТРОЙСТВА</strong>
    </div>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Устройство</th>
        <th>Тип</th>
        <th>Действия</th>

      </tr>
      </thead>
      <tbody>

      <% @printers.each do |pr| %>
          <% if pr.retirement? %>
              <tr class="error">

          <% else %>
              <tr>
          <% end %>

          <td><%= pr.device %></td>
          <td> <%= pr.printer_type %> </td>

          <td class="ctrl"> <%= link_to "просмотр", station_printer_path(@station, pr) %></td>
          <td class="ctrl"><%= link_to "редактировать", edit_station_printer_path(@station, pr) %></td>

          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

<% if @computers.any? %>
    <div class="alert alert-success">
      <strong>СВТ</strong>
    </div>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Компьютер</th>
        <th>Тип ЭВМ</th>
        <th>Действия</th>

      </tr>
      </thead>
      <tbody>

      <% @computers.each do |c| %>
          <% if c.retirement? %>
              <tr class="error">

          <% else %>
              <tr>
          <% end %>
          <td><%= c.platform %></td>
          <td> <%= c.comp_type %> </td>

          <td class="ctrl"> <%= link_to "просмотр", station_computer_path(@station, c) %></td>
          <td class="ctrl"><%= link_to "редактировать", edit_station_computer_path(@station, c) %></td>

          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

<% if @devices.any? %>
    <div class="alert alert-success">
      <strong>ДРУГОЕ ОБОРУДОВАНИЕ</strong>
    </div>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Тип</th>
        <th>Модель</th>
        <th>Действия</th>

      </tr>
      </thead>
      <tbody>

      <% @devices.each do |d| %>
          <% if d.retirement? %>
              <tr class="error">

          <% else %>
              <tr>

          <% end %>
          <td><%= d.device_type %></td>
          <td> <%= d.device_model %> </td>

          <td class="ctrl"> <%= link_to "просмотр", station_device_path(@station, d) %></td>
          <td class="ctrl"><%= link_to "редактировать", edit_station_device_path(@station, d) %></td>

          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>
<p>
  <span class="badge badge-important"> </span> - закончен срок эксплуатации</p></br>

