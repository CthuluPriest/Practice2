<div class="input-append">
<%= form_tag stations_path, :method => 'get' do %>

    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil, :class => "btn btn" %>
    </p>
<% end %>
  </div>


<legend>
  <h2>Список всех отделений</h2>
</legend>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Название</th>
    <th>Район</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>

  <% @stations.each do |station| %>

      <tr>
        <td><%= station.name %></td>
        <td><%= station.district_id %></td>



        <td class="ctrl"><%= link_to 'Просмотр', station %></td>
        <td class="ctrl"><%= link_to 'Удалить', station, method: :delete, data: {confirm: 'Вы уверены?'} %></td>
      </tr>
      </tbody>
  <% end %>

  </table>

<br/>

<%= link_to 'На главную', root_path, :class => "btn" %>

